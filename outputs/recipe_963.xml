			<object type="Zutaten" xml:id="orangen">Orangen (Pomeranzen)</object>
			<object type="Zutaten" xml:id="wasser">Wasser</object>
			<object type="Zutaten" xml:id="zitronensaft">Zitronensaft</object>
			<object type="Zutaten" xml:id="zucker">Zucker</object>
                 </listObject>
