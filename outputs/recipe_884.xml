			<object type="MaterielleKultur" xml:id="kanne">Kanne</object>
			<object type="MaterielleKultur" xml:id="schuessel">Schüssel</object>
			<object type="MaterielleKultur" xml:id="silberloeffel">Silberlöffel</object>
