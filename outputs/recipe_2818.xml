            <div type="ingredients">
                <listObject>
			<object type="Zutaten" xml:id="buchweizenmehl">Buchweizenmehl</object>
			<object type="Zutaten" xml:id="butter">Butter</object>
			<object type="Zutaten" xml:id="parmesan">Parmesan</object>
			<object type="Zutaten" xml:id="salz">Salz</object>
			<object type="Zutaten" xml:id="wasser">Wasser</object>
                 </listObject>
            </div>
             <div type="utensils">
                <listObject>
			<object type="MaterielleKultur" xml:id="draht">Draht</object>
			<object type="MaterielleKultur" xml:id="faden">Faden</object>
			<object type="MaterielleKultur" xml:id="geschirr">Geschirr</object>
			<object type="MaterielleKultur" xml:id="kessel">Kessel</object>
			<object type="MaterielleKultur" xml:id="kochloeffel">Kochlöffel</object>
			<object type="MaterielleKultur" xml:id="pfanne">Pfanne</object>
			<object type="MaterielleKultur" xml:id="pruegel">Prügel</object>
			<object type="MaterielleKultur" xml:id="schuessel">Schüssel</object>
			<object type="MaterielleKultur" xml:id="hafen-topf">Topf (Hafen)</object>
                </listObject>
